@model List<Post>
<div class="row">
    <div class="bg-white p-4">
        <div class="col-12">
            <h2>Post List</h2>
            <a href="/post/create" class="btn btn-primary my-3">Create</a>
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th style="width: 200px;">Image</th>
                        <th>Title</th>
                        <th>Is active</th>
                        <th style="width: 120px;"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(var post in Model){
                        <tr>
                            <td><img src="/img/@post.Image" alt="" class="img-fluid"></td>
                            <td>@post.Title</td>
                            <td>@post.IsActive</td>
                            <td>
                                <a href="/post/edit/@post.PostId" class="btn btn-sm btn-primary">Edit</a> 
                                <a href="" class="btn btn-sm btn-danger">Delete</a> 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>